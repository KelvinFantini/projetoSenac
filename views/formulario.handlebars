
<!--Esta é a página de Login-->

<div class="formularioLogin">
    <h1>Entrar na conta </h1>
    <form action="/cadUsuario1" method="POST">
        <div class="form ">
        <div class="form-group ">
            <label for="inputAddress">Nome</label>
            <input type="text" name="nome" class="form-control" id="inputAddress" placeholder="Nome/nome da ONG">
        </div>
        <br>
        <div class="form-group ">
            <label for="inputPassword4">Senha</label>
            <input type="password" name="senha" class="form-control" id="inputPassword4" placeholder="Senha">
        </div>
        </div>
        <div class="form-group">
        <div class="form-check">
            <a href="/cadastro">Não possuo conta!<br>Quero me cadastrar!</a>  
        </div>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
</div>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Senha</th>
        <th>Atualizar</th>
        <th>Excluir</th>
    </tr>
    {{#each doador}}
        <tr>
            <td>{{nome}}</td>
            <td>{{senha}}</td>
            <td><a href="/update/{{id}}">Modificar</a></td>
            <td><a href="/delete/{{id}}">Apagar</a></td>
        </tr>
    {{/each}}
</table>
