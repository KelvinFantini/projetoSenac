
<!--Esta é a página de Login-->
<div class="Login">
    <div class="formularioLogin">
        <form action="/login1" method="POST">
            <div class="form ">
            <div class="form-group ">
                <label for="inputAddress">Email</label>
                <input type="text" name="email" class="form-control" id="inputAddress" placeholder="Digite seu email">
            </div>
            <br>
            <div class="form-group ">
                <label for="inputPassword4">Senha</label>
                <input type="password" name="senha" class="form-control" id="inputPassword4" placeholder="Senha">
            </div>
            </div>
            <div class="form-group">
            <div class="form-check">
                <a href="/cadastro">Não possuo conta!<br>Quero me cadastrar!</a>  
            </div>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
</div>

